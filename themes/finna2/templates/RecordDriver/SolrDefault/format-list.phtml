<?
  $formatMap = [];
  $formats = (array)$this->driver->tryMethod('getFormats');
  if ($formats) {
    // Take last level of each format main type
    foreach ($formats as $format) {
      $parts = explode('/', $format);
      if (isset($parts[1])) {
        $formatMap[$parts[1]] = $format;
      } else {
        $formatMap['-'] = $format;
      }
    }
  }
?>
<? foreach ($formatMap as $format): ?>
  <span class="label label-info iconlabel format-<?=$this->record($this->driver)->getFormatClass($format)?>"><?=$this->transEsc($format)?></span>
<? endforeach; ?>
